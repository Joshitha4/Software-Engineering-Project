<%- include('partials/header') %>
    <div class="container mt-5">
        <h1>Register</h1>

        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">

                        <!-- Makes POST request to /register route -->
                        <form action="/register" method="POST">
                            <div class="form-group">
                                <p>Please select which of the following best represents you?</p>
                                <input type="radio" id="recruiter" name="recruiter_or_seeker" value="recruiter">   <label for="recruiter">Recruiter</label><br>   <input type="radio" id="seeker" name="recruiter_or_seeker" value="seeker">   <label for="seeker">Job Seeker</label><br>
                            </div>
                            <div class="form-group">
                                <label for="organization">Organization</label>
                                <input type="text" class="form-control" name="organization">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" name="username" [(ngModel)]="email" #username="ngModel" required username/>>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-dark">Register</button>
                        </form>

                    </div>
                </div>
            </div>

